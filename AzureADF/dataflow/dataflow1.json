{
	"name": "dataflow1",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "ds_sourceCSV",
						"type": "DatasetReference"
					},
					"name": "V36S1P2"
				},
				{
					"dataset": {
						"referenceName": "ds_sourceCSV",
						"type": "DatasetReference"
					},
					"name": "V36S3P1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "ds_sinkTable",
						"type": "DatasetReference"
					},
					"name": "V36S4",
					"description": "IPPF_WBS_FORECAST_LOAD"
				}
			],
			"transformations": [
				{
					"name": "V36S4P1Derive",
					"description": "derive - DS V36S0"
				},
				{
					"name": "V36S4P1",
					"description": "select  - DS V36S0"
				},
				{
					"name": "V36S0P1Join",
					"description": "join - DS V36S1"
				},
				{
					"name": "V36S0P1",
					"description": "select  - DS V36S1"
				},
				{
					"name": "V36S1P1",
					"description": "select  - DS V36S3"
				}
			],
			"scriptLines": [
				"source(output(",
				"          COST_ELEM_CD as string,",
				"          VAL_CAT_CD as string,",
				"          REV_IND as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     maxColumns: 200) ~> V36S1P2",
				"source(output(",
				"          WBS_ID as string,",
				"          COST_ELEM_CD as string,",
				"          WBS_ELEM_OC_AMT as decimal(15,2),",
				"          MONTH_NUM as integer,",
				"          YEAR_NUM as integer,",
				"          WBS_ELEM_CC_AMT as decimal(15,2),",
				"          OBJ_CRNCY_CD as string,",
				"          CNTRL_CRNCY_CD as string,",
				"          WBS_LVL_NUM as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false,",
				"     maxColumns: 200) ~> V36S3P1",
				"V36S0P1 derive(OBJ_AMT = case(trim(REV_IND)  == 'REVENUE',-1*OBJ_AMT,OBJ_AMT),",
				"          CONTRL_AMT = case(trim(REV_IND)  == 'REVENUE',-1*CONTRL_AMT,CONTRL_AMT),",
				"          TXN_AMT = case(trim(REV_IND)  == 'REVENUE',-1*OBJ_AMT,OBJ_AMT),",
				"          TXN_CRNCY_CD = OBJ_CRNCY_CD) ~> V36S4P1Derive",
				"V36S4P1Derive select(mapColumn(",
				"          WBS_ID,",
				"          COST_ELEM_CD,",
				"          VAL_CAT_CD,",
				"          FRCST_FINL_MO,",
				"          FRCST_FINL_YR,",
				"          OBJ_AMT,",
				"          OBJ_CRNCY_CD,",
				"          CONTRL_AMT,",
				"          CONTRL_CRNCY_CD,",
				"          TXN_AMT,",
				"          TXN_CRNCY_CD",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> V36S4P1",
				"V36S1P1, V36S1P2 join(V36S1P1@COST_ELEM_CD == V36S1P2@COST_ELEM_CD,",
				"     joinType:'inner',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> V36S0P1Join",
				"V36S0P1Join select(mapColumn(",
				"          WBS_ID,",
				"          COST_ELEM_CD = V36S1P1@COST_ELEM_CD,",
				"          VAL_CAT_CD,",
				"          FRCST_FINL_MO,",
				"          FRCST_FINL_YR,",
				"          OBJ_CRNCY_CD,",
				"          OBJ_AMT,",
				"          CONTRL_AMT,",
				"          CONTRL_CRNCY_CD,",
				"          REV_IND",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> V36S0P1",
				"V36S3P1 select(mapColumn(",
				"          WBS_ID,",
				"          COST_ELEM_CD,",
				"          FRCST_FINL_MO = MONTH_NUM,",
				"          FRCST_FINL_YR = YEAR_NUM,",
				"          OBJ_CRNCY_CD,",
				"          OBJ_AMT = WBS_ELEM_OC_AMT,",
				"          CONTRL_AMT = WBS_ELEM_CC_AMT,",
				"          CONTRL_CRNCY_CD = CNTRL_CRNCY_CD",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> V36S1P1",
				"V36S4P1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     deletable:false,",
				"     insertable:true,",
				"     updateable:false,",
				"     upsertable:false,",
				"     format: 'table',",
				"     preSQLs:['DELETE FROM STAG.WBS_FORECAST_LOAD'],",
				"     postSQLs:['DELETE FROM STAG.WBS_FORECAST_LOAD WHERE CAST(WBS_ID AS CHAR(1))!=\\'C\\''],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     errorHandlingOption: 'stopOnFirstError') ~> V36S4"
			]
		}
	}
}